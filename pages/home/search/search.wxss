.search-page {
  padding: 20rpx;
}

.search-box {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.search-btn {
  margin-left: 10rpx;
  padding: 10rpx;
  background-color: #7cb2ec;
  color: #fff;
  border-radius: 10rpx;
}

.search-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.search-title {
  font-size: 32rpx;
  font-weight: bold;
}

.search-clear {
  font-size: 24rpx;
  color: #77b3f3;
}

.search-content {
  display: flex;
  flex-wrap: wrap;
}

.search-item {
  background-color: #f5f5f5;
  padding: 10rpx;
  margin: 5rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}
