<view class="page">
  <!-- 顶部插入一张图片 -->
  <view class="image-container">
    <image class="top-image" src="https://xh-1330255155.cos.ap-guangzhou.myqcloud.com/f.jpg" />
  </view>

  <!-- 搜索框 -->
  <view class="search-box">
    <input class="search-input" placeholder="搜索项目" bindinput="onInput" />
    <button class="search-btn" bindtap="onSearch" style="width: 166rpx; height: 97rpx; display: block; box-sizing: border-box; left: 5rpx; top: 0rpx">搜索</button>
  </view>

  <!-- 导航框 -->
  <view class="navigation-bar">
    <text class="navigation-title">推荐项目</text>
  </view>

  <!-- 推荐项目列表 -->
  <view class="project-list">
    <block wx:for="{{projects}}" wx:key="index">
      <view class="project-item">
        <image class="project-image" src="{{item.image}}" mode="aspectFill" />
        <view class="project-info">
          <text class="project-title">{{item.title}}</text>
          <text class="project-description">{{item.description}}</text>
        </view>
      </view>
    </block>
  </view>
</view>
