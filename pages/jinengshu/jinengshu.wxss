.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.welcome-text {
  font-size: 20px;
  margin-bottom: 20px;
  font-weight: bold;
}

.skill-tree {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.skill-node {
  margin: 5px 0;
  padding: 5px;
  border: 1px solid transparent;
  border-radius: 5px;
}

.modify-btn {
  margin-top: 20px;
}