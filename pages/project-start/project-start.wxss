/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: #ffffff;
  height: 100%;
  box-sizing: border-box;
}

/* 标题样式 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 输入框区域样式 */
.input-area {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 输入框标签样式 */
.input-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 5rpx;
}

/* 输入框样式 */
.input-box {
  width: 100%;
  height: 80rpx;
  padding: 10rpx;
  border: 1px solid #dddddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 文本区域样式 */
textarea.input-box {
  height: 150rpx;
}

/* 提交按钮样式 */
.submit-button {
  margin-top: 40rpx;
  height: 80rpx;
  background-color: #1aad19;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
}
/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: white;
  width: 80%;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333;
}
/* picker的样式 */
.picker-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  width: 100%;
}

.picker-box input {
  width: 90%;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  font-size: 30rpx;
  color: #333;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}



