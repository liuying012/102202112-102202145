.page-container {
  background-color: #1a1a2e; /* 深色调背景 */
  color: white;
  padding: 20px;
  position: relative;
  min-height: 100vh; /* 确保背景覆盖整个页面 */
}

.top-time {
  font-size: 20px;
  color: #ffffff;
  position: absolute;
  top: 10px;
  left: 20px;
}

.title {
  font-size: 28px;
  text-align: center;
  margin-top: 60px;
  font-weight: bold;
  color: #00ffff; /* 高科技感颜色 */
}

.button-container {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
}

button {
  width: 120px;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border-radius: 10px;
  border: none;
  text-align: center;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

button:hover {
  opacity: 0.8;
}

.collaborate-button {
  background-color: #0066cc;
}

.start-project-button {
  background-color: #00cc66;
}

.project-info {
  margin-top: 30px;
  background-color: rgba(255, 255, 255, 0.1); /* 半透明背景 */
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* 加点阴影 */
}

.project-title {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #00ffff; /* 高科技感的颜色 */
}

.project-description {
  font-size: 16px;
  color: #dddddd;
}

.project-members {
  display: flex;
  align-items: center;
  margin-top: 15px;
}

.member-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.members-count {
  font-size: 16px;
  color: #cccccc;
}

/* 背景图形 */
.page-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('https://xh-1330255155.cos.ap-guangzhou.myqcloud.com/1.jpg'); /* 科技感图 */
  background-size: cover;
  opacity: 0.3;
  z-index: -1;
}
