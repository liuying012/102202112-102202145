.container {
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%; /* 宽度为100% */
  position: relative;
  min-height: 100vh; /* 确保页面高度覆盖整个屏幕 */
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url('/images/background.jpg'); /* 确保路径正确 */
  background-size: cover;
  background-position: center;
  z-index: -1; /* 确保背景在最底层 */
}

.title-container {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  position: relative;
  z-index: 1;
}

.title-button {
  padding: 10px 20px;
  margin: 0 10px;
  background-color: white; /* 按钮背景颜色 */
  color: black; /* 文字颜色 */
  border-radius: 5px; /* 圆角 */
  font-size: 16px;
}

.rounded-rectangle {
  width: 90%; /* 让矩形宽度填满90%的容器 */
  height: 120px; /* 保持当前高度 */
  background-color: white;
  border-radius: 20px;
  margin-top: 20px;
  position: relative;
  z-index: 0; /* 确保矩形在背景和按钮之间 */
}

.student-container {
  width: 90%;
  display: flex;
  flex-direction: column;
  margin-top: 30px;
}

.avatar-circle-container {
  display: flex; /* 水平布局 */
  align-items: center; /* 垂直居中 */
  justify-content: space-between; /* 留出空间 */
  margin-bottom: 20rpx;
  width: 100%; /* 宽度为100% */
}

.avatar-circle {
  width: 150rpx; /* 圆圈宽度 */
  height: 150rpx; /* 圆圈高度 */
  border-radius: 50%; /* 圆形 */
  overflow: hidden; /* 隐藏溢出部分 */
  position: relative;
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 保持图片比例 */
}

.student-info {
  margin-left: 20px; /* 调整头像和信息之间的间距 */
  font-weight: bold;
  font-size: 32rpx;
  flex-grow: 1; /* 占据剩余空间 */
}

.chat-button {
  background-color: #a5d0fd; /* 按钮背景颜色 */
  color: white; /* 按钮文字颜色 */
  border-radius: 15rpx;
  padding: 10rpx 20rpx; /* 调整按钮的内边距 */
  font-size: 28rpx; /* 按钮文字大小 */
  cursor: pointer;
  margin-left: 20px;
}
