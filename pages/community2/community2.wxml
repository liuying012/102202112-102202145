<view class="container">
     <!-- 页面顶部图片 -->
     <view class="image-container">
         <image class="top-image" src="/images/background.jpg" style="width: 750rpx; height: 550rpx; display: inline-block; box-sizing: content-box"></image>
     </view>
     <!-- 四角圆滑的矩形 -->
     <view class="rounded-rectangle" style="width: 750rpx; height: 500rpx; display: block; box-sizing: content-box; left: 0rpx; top: 0rpx"></view>
     
     <!-- 导师大赏和技能桥梁并排显示 -->
     <view class="title-container" style="position: relative; left: 0rpx; top: -443rpx">
         <view class="title-button" bindtap="onTutorTitleTap">导师大赏</view>
         <view class="title-button" bindtap="onBridgeTitleTap">技能桥梁</view>
     </view>
     <!-- 技能桥梁下方的空白部分 -->
     <view class="skill-bridge-container">
         <!-- 四个较大的带有黑色边框的圆圈 -->
         <view class="avatar-circle-container">
             <!-- 循环创建四个圆圈，并在每个圆圈内放置图片和学生信息 -->
             <block wx:for="{{students}}" wx:key="index">
                 <view class="avatar-circle" style="position: relative;left: -262rpx; top: -480rpx">
                     <image class="avatar-image" src="/pages/community2/images/student{{index + 1}}.jpg"></image>
                      <!-- 学生信息显示区域 -->
                    <view class="student-info" style="position: absolute; left: 200rpx; top: 50%; transform: translateY(-50%); white-space: nowrap;">
                        <view class="学生姓名" style="font-weight: bold;">{{item.name}}</view>
                        <view class="专业名称" style="font-weight: bold;">{{item.major}}</view>
                        <view class="掌握技能" style="font-weight: bold;">{{item.skills}}</view>
                    </view>
                    <!-- 聊天按钮 -->
                    <button class="chat-button" bindtap="onChatTap" data-index="{{index}}" style="right: 0; top: 50%; transform: translateY(-50%);">聊天</button>
                </view>
            </block>
        </view>
    </view>
</view>