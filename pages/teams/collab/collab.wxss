/* pages/collab/collab.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.custom-navbar {
  display: flex;
  align-items: center;
  height: 50px; /* 设置导航栏高度 */
  background-color: #f8f8f8;
  padding: 0 10px;
  position: relative;
}

.back-button {
  font-size: 14px; /* 设置按钮文字大小 */
  padding: 5px 10px; /* 控制按钮的内边距，缩小按钮 */
  border: none;
  background-color: transparent; /* 移除按钮的默认背景 */
  position: absolute;
  left: 10px; /* 将按钮放到最左边 */
}

.title {
  flex-grow: 1;
  text-align: center;
  font-size: 18px;
  font-weight: bold;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  padding: 10px;
  background-color: #F8F8F8;
  align-items: center;
}

.time {
  font-size: 18px;
  color: #333;
}

.app-name {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.background-area {
  position: relative;
  width: 100%;
  height: 60%;
}

.background-img {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.co-lab-title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 48px;
  font-weight: bold;
  color: white;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.bottom-bar {
  display: flex;
  justify-content: space-around;
  background-color: #F8F8F8;
  padding: 10px;
  border-top: 1px solid #e0e0e0;
}

.tab {
  font-size: 16px;
  color: #666;
}

.comments-section {
  padding: 10px;
  background-color: #FFF;
}

.comment {
  margin-bottom: 20px;
}

.username {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.comment-text {
  font-size: 16px;
  color: #555;
  margin-top: 5px;
}

.interaction-data {
  display: flex;
  justify-content: space-between;
  margin-top: 5px;
  color: #888;
}

.interaction-data text {
  font-size: 12px;
}

.likes, .comments, .favorites, .shares {
  margin-right: 10px;
}
